        }

        @if (IsAuthenticated && UserRole == "Admin")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="manageaccounts" Match="NavLinkMatch.All">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" area-hidden="true" class="bi bi-person-vcard-fill" viewBox="0 0 16 16">
